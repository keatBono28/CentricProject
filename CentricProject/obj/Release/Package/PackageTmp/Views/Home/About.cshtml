@{
    ViewBag.Title = "About Centric and Our Values";
}
<script>
    window.onload = function () {
        for (var i = 1; i < 8; i++) {
            var j = "recBtn" + i.toString();
            var x = document.getElementById(j);
            x.style.display = "none";
            var access = '@ViewBag.Message';
            if (access == "deny") {
                x.style.display = "none";
            }
            else {
                x.style.display = "block";
            }
        }
    }
</script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"></script>

<div class="col-lg-12 about-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-offset-1 col-md-11">
                    <div class="row" style="margin-top:30px;margin-bottom:30px;">
                        <div class="col-md-offset-1 col-md-4 values-card">
                            <i class="glyphicon glyphicon-exclamation-sign" style="font-size:400%;"></i>
                            <h3 id="valueHeaders">Integrity & Openness</h3>
                            <h4>Embrace Integrity and Openness</h4>
                            <p>
                                We set and live by the highest ethical standards in all our
                                dealings whether it is internal or external – we do the right thing for our
                                clients, associates and company.
                            </p>
                            <p>
                                <a id="recBtn1" role="button" class="btn btn-primary btn-values" href="@Url.Action("Index","ProfileDetails")">Recognize Integrity & Openness&raquo;</a>
                            </p>
                        </div>
                        <div class="col-md-offset-1 col-md-4 values-card">
                            <i class="glyphicon glyphicon-certificate" style="font-size:400%;"></i>
                            <h3 id="valueHeaders">Innovation</h3>
                            <h4>Strive to Innovate</h4>
                            <p>
                                We constantly seek to foster an entrepreneurial, hard working, fun loving culture that encourages
                                innovation and prudent individual or team risk taking within the context of our core values.
                            </p>
                            <p>
                                <a id="recBtn2" role="button" class="btn btn-primary btn-values" href="@Url.Action("Index","ProfileDetails")">Recognize Innovation&raquo;</a>
                            </p>
                        </div>
                    </div>
